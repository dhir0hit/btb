
{% extends '../_doublenavlayout.twig' %}

    {% block body %}
        <link rel='stylesheet' href="/stylesheets/crud.css">

        <body>

        {# TODO: add button to get image for product #}

        {# Creating a form  #}
        <form class="outline" method="post" action="create">

            <label>
                <input type="file" id="image" name="image">
            </label>

            <label for="name"><b>Name</b></label>
            <input type="text" id="name" name="name" placeholder="product name..">

            <label for="productType"><b>Product Type</b></label>
            <input type="text" id="type" name="type" placeholder="Type of Product..">

            <label for="brandName"><b>Brand Name</b></label>
            <input type="text" id="brandName" name="brandName" placeholder="What is the type of brand..">

            <label for="features"><b>Features</b></label>
            <input type="text" id="features" name="features" placeholder="Special Features ..">

            <label for="price"><b>Price</b></label>
            <input type="text" id="price" name="price" placeholder="Price ..">

            <label for="stock"><b>Stock</b></label>
            <input type="text" id="stock" name="stock" placeholder="Stock ..">

            <label for="tags"><b>Tags</b></label>
            <input type="text" id="tags" name="tags" placeholder="Special Tags ..">

            <input type="submit" value="Submit">

        </form>

        </body>
    {% endblock %}

